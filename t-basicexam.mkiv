}

\def\example@specialoptclose#1{
    \startoptclose
    \def\closechoicex{\shorttesttxt[\romannumeral\DNUM]\global\advance\DNUM by 1\relax}
    \dorecurse{#1}{
        \dorecurse{3}{
          \longtesttxt[\romannumeral\CNUM]
        \global\advance\CNUM by 1\relax
        }\specialocitem[answer={\closechoicex}]
      \longtesttxt[\romannumeral\CNUM]}
    \stopoptclose
}

