                right={},
                stopper={.~},
                distance=.5em,
                %before=,
                %after=,
                width=.5em,
                %align=,
                indenting=no,
                %symalign=,
                %symbol=,
                %itemalign=,
                option={packed,joinedup,nowhite},
                way=bysection,
                numberconversion=tnum,]
