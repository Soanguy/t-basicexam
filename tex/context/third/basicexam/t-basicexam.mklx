    \c_closetest_temp=\rawcountervalue[strc_question_order]%
    \c_closetest_temp=\numexpr\c_closetest_temp+1\relax
  \fi
  \closeparameter\c!before
  \useclosestyleandcolor\c!style\c!color}

\def\stopclose{%
