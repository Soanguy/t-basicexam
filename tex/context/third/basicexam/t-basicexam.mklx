\protected\def\doiftrue#1#2{%
  \expandafter\edef\csname #1parameter::#2\endcsname{\csname #1parameter\endcsname{#2}}%
  \ifcsname p_#1_#2\endcsname\else
    \expandafter\newcount\csname p_#1_#2\endcsname
  \fi
  \expandafter\ifx\csname #1parameter::#2\endcsname\s!true
    \csname p_#1_#2\endcsname = 1\relax
  \else
    \expandafter\ifx\csname #1parameter::#2\endcsname\v!yes
      \csname p_#1_#2\endcsname = 1\relax
    \else
      \csname p_#1_#2\endcsname = 0\relax
    \fi
  \fi
  \ifnum\csname p_#1_#2\endcsname=1\relax
    \expandafter\firstofoneargument
  \else
    \expandafter\gobbleoneargument
  \fi}

\protected\def\doiftrueelse#1#2{%
  \expandafter\edef\csname #1parameter::#2\endcsname{\csname #1parameter\endcsname{#2}}%
  \ifcsname p_#1_#2\endcsname\else
    \expandafter\newcount\csname p_#1_#2\endcsname
  \fi
  \expandafter\ifx\csname #1parameter::#2\endcsname\s!true
    \csname p_#1_#2\endcsname = 1\relax
  \else
    \expandafter\ifx\csname #1parameter::#2\endcsname\v!yes
      \csname p_#1_#2\endcsname = 1\relax
    \else
      \csname p_#1_#2\endcsname = 0\relax
    \fi
  \fi
  \ifnum\csname p_#1_#2\endcsname=1\relax
    \expandafter\firstoftwoarguments
  \else
    \expandafter\secondoftwoarguments
  \fi}

