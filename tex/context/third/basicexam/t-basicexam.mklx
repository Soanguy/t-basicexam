\permanent\overloaded\tolerant\protected\def\setupwriting[#S#category]#spacer[#S#levels]#spacer[#S#options]#spacer[#S#settings]%
% category level|each options|settings settings|options
  {\ifarguments
     % nothing to set up
   \or
     \edef\strc_writing_setup_what{#levels}%
     \strc_writing_normal_setup[#category]% == settings
   \or
     \edef\strc_writing_setup_what{#levels}%
     \strc_writing_setup_each{#category}{#levels}%
   \or
     \edef\strc_writing_setup_what{#levels}%
     \ifx\strc_writing_setup_what\v!each
       \strc_writing_setup_each{#category}{#options}%
     \else
       \strc_writing_setup_list{#levels}{#category}{#options}%
     \fi
   \or
     \edef\strc_writing_setup_what{#levels}%
     \ifx\strc_writing_setup_what\v!each
       \strc_writing_setup_each{#category}{#options}%
       \strc_writing_setup_each{#category}{#settings}%
     \else
       \strc_writing_setup_list{#levels}{#category}{#options}%
       \strc_writing_setup_list{#levels}{#category}{#settings}%
     \fi
   \fi}

\def\strc_writing_setup_each#category#whatever%
  {\ifhastok={#whatever}%
     \strc_writing_normal_setup[#category][#whatever]%
   \else
     \strc_writing_normal_setup[#category][\c!option={#whatever}]%
   \fi}

\def\strc_writing_setup_list_level_a#category#whatever#level%
  {\strc_writing_normal_setup[#category:#level][#whatever]}

\def\strc_writing_setup_list_level_b#category#whatever#level%
  {\strc_writing_normal_setup[#category:#level][\c!option={#whatever}]}

\def\strc_writing_setup_list#subcategories#category#whatever%
  {\ifhastok={#whatever}%
     \processcommalist[#subcategories]{\strc_writing_setup_list_level_a{#category}{#whatever}}%
   \else
     \processcommalist[#subcategories]{\strc_writing_setup_list_level_b{#category}{#whatever}}%
   \fi}

\tolerant\protected\def\directnamedwriting[#1]#*[#S#2]#*[#S#3]#*%
 {\groupedcommand{\startnamedwriting[#1][#2][#3]}{\stopnamedwriting}}

\tolerant\protected\def\startnamedwriting[#1]#*[#S#2]#*[#S#3]#*%
  {\begingroup\nofarguments\lastarguments
  \env_subwritingfalse
  \env_writingtrue\set_envitem_counter
  \cdef\currentwriting{#1}% no nested mixing of itemgroups
  \let\currentparentwriting\currentwriting
  \global\advanceby\c_strc_question_nesting\plusone
  \def\currentwritinglevel{\the\c_strc_question_nesting}%
  \normalexpanded{\chaintocurrentwriting{\currentparentwriting:\currentwritinglevel}}%
  \cdef\currentwriting{\currentparentwriting:\currentwritinglevel}%
  \ifcase\nofarguments
       \edef\p_option{\writingparameter\c!option}\setupcurrentwriting[]%
    \or\edef\p_option{\writingparameter\c!option}\setupcurrentwriting[]%
    \or
      \ifhastok={#2}%
        \setupcurrentwriting[#2]%
        \edef\p_option{\writingparameter\c!option}%
      \else
        \edef\p_option{\writingparameter\c!option,#2}%
      \fi
    \or
      \ifhastok={#2}% \writing[textcolor=red]
        \setupcurrentwriting[#2,#3]%
        \edef\p_option{\writingparameter\c!option}%
      \else% \writing[8][textcolor=red]
        \setupcurrentwriting[#3]%
        \edef\p_option{\writingparameter\c!option,#2}%
      \fi
  \fi
  \strc_itemgroups_process_options\p_option
  \installitemgroupoption[question][writing]%
  \startitemgroup[env:question][\p_option]%
  \item[\writingparameter\c!reference]%
  \ifnum\c_strc_question_nesting>1\relax
    \env_subwritingtrue\env_writingfalse\set_envitem_counter
  \fi
  \set_count_envlevel[writing]%
