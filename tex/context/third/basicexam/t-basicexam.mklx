\def\set_envitem_counter{%
  \initcollectanswer% 初始化多项答案收集器
  \ifdefined\currentenvnumber\edef\prevenvnumber{\currentenvnumber}\fi
  \ifenv_answer     \advance\c_envnumber by 10\relax\else
                    \global \c_envnumber=0\relax%
  \ifenv_question   \global \c_envnumber=1\relax \edef\bem_currentenvironment  {question}\fi
  \ifenv_problem    \global \c_envnumber=2\relax \edef\bem_currentenvironment   {problem}\fi
  \ifenv_choice     \global \c_envnumber=3\relax \edef\bem_currentenvironment    {choice}\fi
  \ifenv_material   \global \c_envnumber=4\relax \edef\bem_currentenvironment  {material}\fi
